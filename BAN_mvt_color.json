{
  "version": 8,
  "id": "ban",
  "name": "ban",
  "metadata": {},
  "sources": {
    "adresse": {
      "type": "vector",
      "tiles": ["https://plateforme.adresse.data.gouv.fr/tiles/ban/{z}/{x}/{y}.pbf"],
      "minzoom": 12,
      "maxzoom": 14,
      "attribution": "adresse.data.gouv.fr"
    }
  },
  "sprite": "",
  "glyphs": "",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "layout": {"visibility": "visible"},
      "paint": {"background-color": "#000000"}
    },
    {
      "id": "crc",
      "type": "symbol",
      "source": "adresse",
      "source-layer": "adresses",
      "minzoom": 13,
      "maxzoom": 22,
      "layout": {"visibility": "visible"},
      "paint": {"text-color": "hsb_color(CRC32_checksum(tag(\"nomVoie\"))/4294967296.0, 0.7, 0.7)"}
    },
    {
      "id": "certifie_point",
      "type": "circle",
      "source": "adresse",
      "source-layer": "adresses",
      "minzoom": 13,
      "maxzoom": 22,
      "filter": ["==", "certifie", false],
      "layout": {"visibility": "visible"},
      "paint": {"circle-color": "prop(text-color, crc)", "circle-radius": 3, "circle-stroke-opacity": 0}
    },
    {
      "id": "non_certifie_numero",
      "type": "symbol",
      "source": "adresse",
      "source-layer": "adresses",
      "minzoom": 17,
      "maxzoom": 19,
      "filter": ["==", "certifie", false],
      "layout": {
        "text-field": "numero",
        "text-font": ["Open Sans Regular"],
        "text-allow-overlap": true,
        "visibility": "visible",
        "text-size": 14
      },
      "paint": {"text-color": "prop(text-color, crc)"}
    },
    {
      "id": "non_certifie_num_voie",
      "type": "symbol",
      "source": "adresse",
      "source-layer": "adresses",
      "minzoom": 19,
      "maxzoom": 22,
      "filter": ["==", "certifie", false],
      "layout": {
        "text-field": "eval(concat(tag(\"numero\"), tag(\"suffixe\"), \" \", tag(\"nomVoie\")))",
        "text-font": ["Open Sans Regular"],
        "text-allow-overlap": true,
        "visibility": "visible",
        "text-size": 14
      },
      "paint": {"text-color": "prop(text-color, crc)"}
    },
    {
      "id": "certifie_point",
      "type": "circle",
      "source": "adresse",
      "source-layer": "adresses",
      "minzoom": 13,
      "maxzoom": 22,
      "filter": ["==", "certifie", true],
      "layout": {"visibility": "visible"},
      "paint": {"circle-color": "prop(text-color, crc)", "circle-radius": 3, "circle-stroke-opacity": 0}
    },
    {
      "id": "certifie_numero",
      "type": "symbol",
      "source": "adresse",
      "source-layer": "adresses",
      "minzoom": 17,
      "maxzoom": 19,
      "filter": ["==", "certifie", true],
      "layout": {
        "text-field": "numero",
        "text-font": ["Open Sans Regular"],
        "text-allow-overlap": true,
        "visibility": "visible",
        "text-size": 12
      },
      "paint": {"text-color": "prop(text-color, crc)"}
    },
    {
      "id": "certifie_num_voie",
      "type": "symbol",
      "source": "adresse",
      "source-layer": "adresses",
      "minzoom": 19,
      "maxzoom": 22,
      "filter": ["==", "certifie", true],
      "layout": {
        "text-field": "eval(concat(tag(\"numero\"), tag(\"suffixe\"), \" \", tag(\"nomVoie\")))",
        "text-font": ["Open Sans Regular"],
        "text-allow-overlap": true,
        "visibility": "visible",
        "text-size": 14
      },
      "paint": {"text-color": "prop(text-color, crc)"}
    },
    {
      "id": "lieu-dit_point",
      "type": "circle",
      "source": "adresse",
      "source-layer": "toponymes",
      "minzoom": 13,
      "maxzoom": 22,
      "filter": ["==", "type", "lieu-dit"],
      "layout": {"visibility": "visible"},
      "paint": {"circle-color": "black", "circle-radius": 3}
    },
    {
      "id": "lieu-dit",
      "type": "symbol",
      "source": "adresse",
      "source-layer": "toponymes",
      "minzoom": 16,
      "maxzoom": 22,
      "filter": ["==", "type", "lieu-dit"],
      "layout": {
        "text-field": "\"nomVoie\"",
        "text-font": ["Open Sans Regular"],
        "text-allow-overlap": true,
        "visibility": "visible",
        "text-size": 14
      },
      "paint": {"text-color": "black", "text-halo-width": 0}
    }
  ]
}
